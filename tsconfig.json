{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "types": [
      "react",
      "node"
    ],
    "noEmitOnError": true,
    "alwaysStrict": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/index.ts",
    "src/**/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
